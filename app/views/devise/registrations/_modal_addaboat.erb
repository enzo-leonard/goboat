<!-- Modal -->
<div class="modal fade" id="modal_addaboat" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div>
        <h2>Add a new boat</h2>
      <div class="modal-body">
        <%= simple_form_for(Boat.new) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :name,
                      autofocus: true,
                      required: true,
                      input_html: { autocomplete: "name" }%>
            <%= f.input :city,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "city" }%>
            <%= f.input :capacity,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "capacity" }%>
            <%= f.input :price,
                        required: true,
                        input_html: { autocomplete: "price" } %>
            <%= f.input :photo,
                        input_html: { autocomplete: "photo" } %>
            <%= f.input :description,
                        required: true,
                        input_html: { autocomplete: "description" } %>
          </div>
          <div class="modal-footer">
            <div class="form-actions">
              <%= f.button :submit %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
