          <div>
            <h2><%= boat.name %></h2>
            <p><%= boat.category %> in <%= boat.city %></p>
          </div>
          <h2 class="card-trip-pricing"><%= boat.price %>â‚¬</h2>
          <p class="card-trip-user"><i class="fas fa-user-friends margin"></i><%= boat.capacity %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
