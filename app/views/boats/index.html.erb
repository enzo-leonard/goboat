<p id="notice"><%= notice %></p>

<h1>Boats</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Photo</th>
      <th>Category</th>
      <th>City</th>
      <th>Long</th>
      <th>Lat</th>
      <th>Price</th>
      <th>Available</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boats.each do |boat| %>
      <tr>
        <td><%= boat.name %></td>
        <td><%= boat.photo %></td>
        <td><%= boat.category %></td>
        <td><%= boat.city %></td>
        <td><%= boat.long %></td>
        <td><%= boat.lat %></td>
        <td><%= boat.price %></td>
        <td><%= boat.available %></td>
        <td><%= boat.user_id %></td>
        <td><%= link_to 'Show', boat %></td>
        <td><%= link_to 'Edit', edit_boat_path(boat) %></td>
        <td><%= link_to 'Destroy', boat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

