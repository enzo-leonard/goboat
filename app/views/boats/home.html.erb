<div class="container">
  <div class="search-box">
    <h1>Looking for a boat?</h1>
    <%= form_tag boats_path, method: :get, class: "simple_form search", id:"search-index" do %>
    <div class="search-form-control form-group">
      <label for="city">where</label>
      <%= text_field_tag :city, params[:city], class: "form-control string required field", placeholder: "City"%>
        <label for="date">when</label>
        <div class="index_dates">

        <%= text_field_tag :daterange, params[:date_range], class: "form-control string required field", placeholder: "start - end"%>
        <!-- script to display calendar -->
        <script>
          $(function() {
            $('input[name="daterange"]').daterangepicker({
              cssClass:"index_dates",
              opens: 'right'
            }, function(start, end, label) {
              console.log(start, end);
            });
          });
        </script>
        <!-- end of script to display calendar -->
        </div>
            <label for="category">what</label>
              <%= select_tag :category, raw("<option>petit calibre</option><option>moyen calibre</option><option>gros calibre</option>"), class: "form-control string required field"%>
              <%= button_tag icon('fas', 'search', ' Search'), class: "btn btn-flat", id: "submit-search" %>
            </div>
            <% end %>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
